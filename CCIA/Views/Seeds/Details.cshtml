@model CCIA.Models.Seeds


<h2>Application Details</h2> 
<div class="container">
    <div class="row">
        <div class="col-lg-6">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.Id)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CertProgram" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.AppTypeTrans.AppTypeTrans)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CertYear" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.CertYear)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ApplicantOrganization.OrgName" class="col-sm-2 col-form-label">Conditioner</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.ConditionerOrganization.OrgName)
                    </div>
                </div>  
                <div class="form-group row">
                    <label asp-for="ApplicantOrganization.OrgName" class="col-sm-2 col-form-label">Applicant</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.ApplicantOrganization.OrgName)
                    </div>
                </div>   
                <div class="form-group row">
                    <label asp-for="Variety.Crop.Name" class="col-sm-2 col-form-label">Crop</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.Variety.Crop.Name)
                    </div>
                </div>   
                <div class="form-group row">
                    <label asp-for="Variety.Name" class="col-sm-2 col-form-label">Variety</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.Variety.Name)
                    </div>
                </div>  
                <div class="form-group row">
                    <label asp-for="ClassProduced.Class" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.ClassProduced.Class)
                    </div>
                </div>  
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Cert #</label>
                    <div class="col-sm-10">
                        @Model.CertNumber()
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LotNumber" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.LotNumber)
                    </div>
                </div> 
                <div class="form-group row">
                    <label asp-for="PoundsLot" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.PoundsLot)
                    </div>
                </div> 
                 <div class="form-group row">
                    <label asp-for="Remarks" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.Remarks)
                    </div>
                </div> 
                 <div class="form-group row">
                    <label asp-for="Status" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(x => x.Status)
                    </div>
                </div>                
        </div>        
    </div>
</div>

