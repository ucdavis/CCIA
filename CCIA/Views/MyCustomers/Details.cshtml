@model CCIA.Models.MyCustomers


@{
    ViewData["Title"] = "Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>@Model.Name</h2>
    </div>
    <div class="panel-body">
        <a class="btn btn-primary" asp-action="Index" asp-controller="MyCustomers">Back to My Customers</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Delete" method="post">
                <div class="form-group required">
                    <label class="control-label" asp-for="Name"></label>
                    <input disabled class="form-control" type="text" asp-for="Name">
                </div>                

                <div class="form-group required">
                    <label class="control-label" asp-for="Address1"></label>
                    <input disabled class="form-control" type="text" asp-for="Address1"/>
                </div>               

                <div class="form-group">
                    <label class="control-label" asp-for="Address2"></label>
                    <input disabled class="form-control" type="text" asp-for="Address2"/>
                </div>

                <div class="form-group required">
                    <label class="control-label" asp-for="City"></label>
                    <input disabled class="form-control" type="text" asp-for="City"/>
                </div>

                <div class="form-group required">
                    <label class="control-label" asp-for="County.CountyName">County</label>
                    <input disabled class="form-control" type="text" asp-for="County.CountyName"/>
                </div>

                <div class="form-group required">
                    <label asp-for="State.StateProvinceName">State</label>
                    <input disabled class="form-control" type="text" asp-for="State.StateProvinceName"/>
                </div>

                <div class="form-group required">
                    <label asp-for="Country.Name">Country</label>
                    <input disabled class="form-control" type="text" asp-for="Country.Name"/>
                </div>

                <div class="form-group required">
                    <label asp-for="Zip">Zip</label>
                    <input disabled asp-for="Zip" type="text" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input disabled asp-for="Phone" type="text" class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input disabled asp-for="Email" type="email" class="form-control"/>
                </div>

                <div class="form-group">
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="MyCustomers" asp-route-id="@Model.Id">Edit</a>
                    <button class="btn btn-primary" type="submit" asp-action="Delete" asp-controller="MyCustomers" asp-route-id="@Model.Id">Delete</button>
                </div>
        </form>
    </div>
</div>