@model CCIA.Models.ApplicationViewModel

<div class="form-group">
    <label>Class to be Produced</label><em class="required">•</em>
    @{ ViewBag.name = "Application.ClassProducedId"; }
    @Html.Partial("Shared/_ClassRadioButtons")
    @Html.ValidationMessage("ClassProduced", "", new { @class = "text-danger" })
</div>

<section id="planting-stock" class="form-section">
    <h4>Planting Stock</h4>

    <!-- First Planting Stock form --> 
    @Html.Partial("Seed/_PlantingStock")

    <!-- Second Planting Stock form -->
    <div id="second-ps">
        @if (@Model.RenderSecondPlantingStock)
        {
            @Html.Partial("Seed/_SecondPlantingStock");
        }
        else
        {
            <button id="add-second-ps" class="btn btn-primary">Add a second planting stocks record</button>
            <p><em>Enter both parent lines for hybrid production.</em></p>
        }
    </div>

</section>

<section id="field-info" class="form-section">
    <h4>Field Information</h4>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="name-num">Name/No.</label><em class="required">•</em>
            <input type="text" class="form-control" id="name-num" name="Application.FieldName" placeholder="Name/No.">
            @Html.ValidationMessageFor(m => m.Application.FieldName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            <label for="date-planted">Date Planted</label><em class="required">•</em>
            <div class='input-group date' id='datetimepicker1'>
                <input type="text" class="form-control" id="date-planted" name="Application.DatePlanted" placeholder="MM/DD/YYYY">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessage("Application.DatePlanted", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>County</label><em class="required">•</em>
        <select class="form-control" name=FarmCounty>
            <option></option>
            @foreach (var county in Model.Counties)
            {
                <option value=@county.CountyId>
                    @county.CountyName
                </option>
            }
        </select>
        @Html.ValidationMessage("Application.FarmCounty", "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="acres-applied">Acres Applied</label><em class="required">•</em>
        <input type="text" class="form-control" id="acres-applied" name="Application.AcresApplied" placeholder="Acres Applied">
        @Html.ValidationMessage("Application.AcresApplied", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="comments">Additional Information/Comments</label>
        <textarea class="form-control" id="comments" rows="5" name="Application.ApplicantComments" placeholder="Additional Information/Comments"></textarea>
    </div>

    @Html.Partial("Shared/_FieldHistory")
</section>

<button type="submit" class="btn btn-primary">Continue with Application</button>