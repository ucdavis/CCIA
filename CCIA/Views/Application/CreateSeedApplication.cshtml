@model CCIA.Models.ApplicationViewModel

@{
    ViewData["Title"] = "Application";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

<h2>Application to Produce Certified Seed: @Model.Organization.OrgName</h2>

<h4>Applicant Information:</h4>
<table class="table">
    <thead>
        <tr>
            <th>Account #</th>
            <th>Grower</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody id="organizations">
        <tr>
            <td>@Model.Organization.OrgId</td>
            <td>@Model.Organization.OrgName</td>
            <td>@Model.Organization.Address.Address1</td>
            <td>@Model.Organization.Address.City</td>
            <td>@Model.OrgState</td>
        </tr>
    </tbody>
</table>

<form action="/Application/Create" method="post" id="seedApplication">

    <div class="form-group row">
        <div class="col-lg-4 col-sm-4 col-xs-4">
            <label>Crop:</label>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" name="crop">Crop
                <span class="caret"></span></button>
                <ul class="dropdown-menu" id="crop-select">
                    @foreach (var crop in Model.Crops)
                    {
                        <li><a href="#/">@crop.Crop</a></li>
                    }                   
                </ul>
            </div>
        </div>
        
        <div class="col-lg-4 col-sm-4 col-xs-4">
            <label>Crop Year</label>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" name="cropYear">Crop Year
                <span class="caret"></span></button>
                <ul class="dropdown-menu" id="cropyear-select">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#/">@DateTime.Now.Year</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#/">@(DateTime.Now.Year+1)</a></li>
                </ul>
            </div>
        </div>
        
        <div class="col-lg-4 col-sm-4 col-xs-4">  
            <div class="col-md-6">
                <label for="variety">Variety</label>
                <input type="text" class="form-control" id="variety" name="variety" placeholder="Variety">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Class to be Produced:</label>
        <div class="form-check form-check-inline">
            @foreach (var item in Model.ClassProduced) {
                <input class="form-check-input" type="radio" name="classProduced" id="inlineRadio1" value=@item.ClassProducedTrans>
                <label class="form-check-label" for="inlineRadio1">@item.ClassProducedTrans</label>
            }
        </div>
    </div>

