                    <label class="form-check-label" for="inlineRadio1">@item.ClassProducedTrans</label>
                }
            </div>
        </div>

        <div class="form-group">
            <label>State/Country where Planting Stock Tag was issued:</label><i> - Optional</i>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" name="stateCountyTagIssued2">State/Country
                <span class="caret"></span></button>
                <ul class="dropdown-menu" id="statecounty-issued-select">
                    @foreach (var state_country in Model.StateProvince)
                    {
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#/">@state_country.StateProvinceName</a></li>
                    }
