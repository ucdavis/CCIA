                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" name="stateCountyTagIssued">State/Country
                <span class="caret"></span></button>
                <ul class="dropdown-menu" id="statecounty-issued-select">
                    @foreach (var state_country in Model.StateProvince)
                    {
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#/">@state_country.StateProvinceName</a></li>
                    }
                </ul>
            </div>
        </div>

        <div class="form-group">
