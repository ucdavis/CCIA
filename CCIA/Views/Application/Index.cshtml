@model CCIA.Models.IndexViewModels.ApplicationIndexViewModel


@{
    ViewData["Title"] = "Index";
}

<form method="get" class="form-inline">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Applications</h2>
        </div>
        <div class="panel-body">            
            <div class="form-group">
                <label for="CertYear">Display Apps for Cert Year:</label>
                <select asp-for="CertYear" class="form-control" asp-items="@(new SelectList(Model.certYears, Model.CertYear))"></select>
            </div>
            <div class="form-group">               
                <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> <input type="submit" value="Update Table" class="btn btn-primary" />                
            </div>            
        </div>
    </div>
</form>

<div class="col-lg-1">
    <table id="table" class="table">
        <thead>
            <th></th>
        <th>AppId</th>
        <th>Type</th>
        <th>Cert Year</th>
        <th>Grower</th>
        <th>Field Name</th>
        <th>Acres</th>
        <th>County</th>
        <th>Crop</th>
        <th>Variety</th>
        <th>Class</th>
        <th>Map</th>
        <th>Status</th>
        </thead>
        <tbody>
        
            @foreach (var app in Model.applications)
            {
            <tr>
                <td><a asp-action="Details" asp-controller="Application" asp-route-id="@app.AppId">Details</a></td>
                <td>@app.AppId</td>
                <td>@app.AppType</td>
                <td>@app.CertYear</td>
                <td>@app.GrowerOrganization.OrgName</td>
                <td>@app.FieldName</td>
                <td>@app.AcresApplied</td>
                <td>@app.County.CountyName</td>
                <td>@app.Crop.Name</td>
                @if (app.AppType == "PV" || app.SelectedVarietyId==null)
                {
                    <td></td>
                }
                else
                {
                    <td>@app.Variety.Name</td>
                }
               @if (app.ClassProduced != null)
        {
            <td>@app.ClassProduced.ClassProducedTrans</td>
        }
        else
        {
            <td>@app.ClassProducedId</td>
        }

        <td>@app.MapVe</td>
        <td>@app.Status</td>
            </tr>
            }

        </tbody>
    </table>
</div>
