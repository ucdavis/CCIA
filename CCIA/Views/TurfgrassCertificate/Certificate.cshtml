@model CCIA.Models.TurfgrassCertificatesViewModel

@{
    ViewData["Title"] = "Certificate";
}

<form method="post">
    <div class="row">
        <div class="col-md-4" style="padding-right: 0%">
            <table width="100%" border="1">
                <tr style="border-style: double;">
                    @{
                        var imgDisclaimer = "../../images/turfgrass_" + (Model.application.ClassProduced.ClassProducedTrans).ToLower() + "_disclaimer.jpg";
                    }

                    <td><img width="100%" src="@imgDisclaimer"/></td>             
                </tr>

                <tr style="border-style: double;">
                    <td style="padding-left:8px">
                        Kind: @Model.application.Crop.Name

                        <br/>

                        Variety/Brand: @Model.application.EnteredVariety

                        <br/>

                        Quantity:

                        <br/>

                        Sprigs (bushels): @Model.TurfgrassCertificates.Sprigs

                        <br/>

                        Sod (sq. ft.): @Model.TurfgrassCertificates.Sod                                            
                        
                        <br />

                        Billing Invoice: @Model.TurfgrassCertificates.BillingInvoice

                        <br />

                        Field #: @Model.application.FieldName
                                            
                        <br />

                        Harvest Date: @Model.TurfgrassCertificates.HarvestDate
                    </td>
                </tr>

                <tr style="border-style: double;">
                    <td style="padding-left:8px">
                        Grower Name & Address:

                        <br/>

                        @Model.application.GrowerOrganization.OrgName

                        <br/>

                        @Model.application.GrowerOrganization.Address.Address1

                        <br/>

                        @Model.application.GrowerOrganization.Address.City

                        <br/>

                        @(Model.application.GrowerOrganization.Address.StateProvince.StateProvinceCode) @(Model.application.GrowerOrganization.Address.PostalCode)
                    </td>
                </tr>
            </table>
        </div>

        <div class="col-md-8" style="padding-left: 0%">
            <table width="100%" border="1">
                <tr style="border-style: double;">
                    @{
                        var imgHeader = "../../images/turfgrass_" + (Model.application.ClassProduced.ClassProducedTrans).ToLower() + "_header.jpg";
                    }

                    <td><img width="100%" src="@imgHeader"/></td>       
                </tr>

                <tr style="border-style: double;">
                    <td style="padding-left:8px; display:flex;">
                        <img src="../../images/ccia-tra.gif" width="18%" align="left"/>
                        <span style="font-size: small; height:100%; align-self:center;">
                            California Crop Improvement Association, Inc.<br/>
                            Parsons Seed Certification Center<br/>
                            One Shields Ave.<br/>
                            Davis, CA 95616<br/>
                            Phone 530-752-0544  Fax 530-752-4735
                        </span> 
                    </td>
                </tr>

                <tr style="border-style: double;">
                    <td style="padding-left:8px">
                        <div style="display:flex; flex-direction:row; justify-content:space-around;">
                            <b>
                                Certification Number: @Model.application.CertNum
                            </b>

                            <b>
                                Harvest #: @Model.TurfgrassCertificates.HarvestNumber
                            </b>

                            <b>
                                Certificate ID: @Model.TurfgrassCertificates.Id
                            </b>
                        </div>
                    </td>
                </tr>

                <tr style="border-style: double;">
                    <td style="padding-left:8px">
                        This grass was grown in accordance with a program designed to promote purity
                        by adherence to published standards.<sup>1</sup>
                        
                        <br/><br/>

                        This certificate must be completed and attached to each bill of lading or invoice
                        representing certified sprigs or sod produced in accordance with the California
                        Crop Improvement Association rules and regulations for production of
                        vegetatively propagated certified turfgrass or Bermuda grass.
                        
                        <br/><br/>

                        I certify the information provided is true and meets the California Crop
                        Improvement Association requirements for vegetatively/seeded propagated
                        turfgrass certification.
                        
                        <br/><br/>

                        Authorized Representative of Grower: 
                        <u>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </u>

                        <br/><br/>
                                                                
                        <sup>1</sup>The CCIA Turfgrass Certification Standards are available at http://ccia.ucdavis.edu
                    </td>
                </tr>

                <tr style="border-style: double;">
                    <td align="center">
                        <b>MEMBER OF ASSOCIATION OF OFFICIAL SEED CERTIFYING AGENCIES</b>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>