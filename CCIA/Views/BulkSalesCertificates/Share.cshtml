@model CCIA.Models.BulkSalesCertificates


@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <div class="row">
                <div class="col-sm-12">
                    <h2>Blend Details</h2>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Id)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Date" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Date)
                </div>
            </div>    
            <div class="form-group row">
                <label asp-for="IdType" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.IdType)
                </div>
            </div>           
            <div class="form-group row">
                <label asp-for="LinkId" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.LinkId)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Program" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Program)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Pounds" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Pounds)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CropName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.CropName)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="VarietyName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.VarietyName)
                </div>
            </div>
             <div class="row">
                <div class="col-sm-12">
                    <h2>Purchaser</h2>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PurchaserName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserName)
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="PurchaserAddressLine1" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserAddressLine1)
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="PurchaserCity" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserCity)
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="PurchaserState.StateProvinceName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserState.StateProvinceName)
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="PurchaserCountry.Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserCountry.Name)
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="PurchaserZip" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserZip)
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="PurchaserPhone" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserPhone)
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="PurchaserEmail" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.PurchaserEmail)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h2>Currently Shared with:</h2>
                </div>
            </div>
            <div>
                <table class="table">
                    <tr>
                        <th>Org Id</th>
                        <th>Name</th>
                    </tr>
                    @foreach (var org in Model.BulkSalesCertificatesShares.ShareOrganization)
                    {
                        <tr>
                            <td>
                               @org.Id
                            </td>
                            <td>@org.Name</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-md-5">
            Form to add new share
        </div>
    </div>
</div>