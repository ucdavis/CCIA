@model CCIA.Models.IndexViewModels.SeedsIndexViewModel


@{
    ViewData["Title"] = "Seeds";
}

@await Html.PartialAsync("_IndexHeaderPartial", @Model)

<div class="col-lg-12">
    <table id="table" class="table">
        <thead>
            <th></th>
        <th>SID</th>
        <th>Program</th>
        <th>Cert Year</th>
        <th>Applicant</th>
        <th>Crop</th>
        <th>Variety</th>
        <th>Class</th>
        <th>Lot#</th>
        <th>Labs?</th>
        <th>Lab Date</th>
        <th></th>
        <th>Status</th>
        </thead>
        <tbody>
        
            @foreach (var seeds in Model.seeds)
            {
            <tr>
                <td><a asp-area="client" asp-action="Details" asp-controller="Seeds" asp-route-id="@seeds.Id">Details</a></td>
                <td>@seeds.Id</td>
                <td>@seeds.CertProgram</td>
                <td>@seeds.CertYear</td>
                <td>@seeds.ApplicantOrganization.OrgName</td>
                <td>@seeds.GetCropName()</td>
                <td>@seeds.GetVarietyName()</td>
                <td>@seeds.ClassProduced.CertClass</td>
                <td>@seeds.LotNumber</td>
                <td>@Html.CheckBoxFor(m => @seeds.HasLabs)</td>
                <td>@if(seeds.LabResults.PrivateLabDate.HasValue){
                    @seeds.LabResults.PrivateLabDate.Value.ToShortDateString()
                    }
                    </td>
                <td></td>
                <td>@seeds.Status</td>
            </tr>
            }
        </tbody>
    </table>
</div>
