@model CCIA.Models.IndexViewModels.MyCustomersIndexViewModel


@{
    ViewData["Title"] = "Index";
}

<div class="card" style="width: 100%;">
    <div class="card-header">
        <h2>@Model.PageTitle</h2>
    </div>
    <div class="card-body">
        <a class="btn btn-primary" asp-action="Create" asp-controller="MyCustomers">Add New Customer</a>
    </div>
</div>

<div class="col-lg-12">
    <table id="table" class="table">
        <thead>
            <th></th>
            <th>Name</th>
            <th>Address 1</th>
            <th>City</th>     
        </thead>
        <tbody>
            @foreach (var customer in Model.myCustomers)
            {
            <tr>
                <td><a class="btn btn-info" asp-action="Details" asp-controller="MyCustomers" asp-route-id="@customer.Id">Details</a></td>
                <td>@customer.Name</td>
                <td>@customer.Address1</td>
                <td>@customer.City</td>
            </tr>
            }
        </tbody>
    </table>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="//cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css" rel="stylesheet">

@section Scripts {
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
    

    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                dom: 'lBfrtip',
                buttons: ['copyHtml5', 'csvHtml5'],
                order: [[ 1, "asc"]],
                columnDefs: [{ targets: 0, orderable: false}],
                pageLength: 50,
            });
            
        } );
       
    </script>
}