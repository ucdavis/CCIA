@model CCIA.Models.IndexViewModels.MyCustomersIndexViewModel


@{
    ViewData["Title"] = "Index";
}

<div class="card" style="width: 100%;">
    <div class="card-header">
        <h2>@Model.PageTitle</h2>
    </div>
    <div class="card-body">
        <a class="btn btn-primary" asp-action="Create" asp-controller="MyCustomers">Add New Customer</a>
    </div>
</div>

<div class="col-lg-12">
    <table id="table" class="table">
        <thead>
        <th></th>
        <th>Name</th>
        <th>Address 1</th>
        <th>City</th>     
        </thead>
        <tbody>
            @foreach (var customer in Model.myCustomers)
            {
            <tr>
                <td><a asp-action="Details" asp-controller="MyCustomers" asp-route-id="@customer.Id">Details</a></td>
                <td>@customer.Name</td>
                <td>@customer.Address1</td>
                <td>@customer.City</td>
                <td></td>                
            </tr>
            }
        </tbody>
    </table>
</div>