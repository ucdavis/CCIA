@model CCIA.Models.IndexViewModels.OECDIndexViewModel


@{
    ViewData["Title"] = "Index";
}

@await Html.PartialAsync("_IndexHeaderPartial", @Model)

<div class="col-lg-12">
    <table id="table" class="table">
        <thead>
            <th></th>
        <th>File#</th>
        <th>SID</th>
        <th>TagID</th>
        <th>Crop</th>
        <th>Variety</th>
        <th>Lot Ref#</th>
        <th>Close Date</th>
        <th>Lbs</th>
        <th>Class</th>
        <th>Country</th>
        <th>Link</th>        
        </thead>
        <tbody>
        
            @foreach (var oecd in Model.oecd)
            {
            <tr>
                <td><a asp-action="Details" asp-controller="oecd" asp-route-id="@oecd.Id" class="btn btn-info">Details</a></td>
                <td>@oecd.Id</td>
                <td>@oecd.SeedsId</td>
                <td>@oecd.TagId</td>
                <td>@oecd.Seeds.Variety.Crop.Name</td>               
                <td>@oecd.Seeds.Variety.Name</td>
                <td>@oecd.LotReferenceNumber</td>
                <td>@oecd.CloseDate.Value.ToShortDateString()</td>
                <td>@oecd.Pounds</td>
                <td>@oecd.Class.Class</td>
                <td>@oecd.Country.Name</td>
                <td></td>                
            </tr>
            }
        </tbody>
    </table>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="//cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css" rel="stylesheet">

@section Scripts {
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
    

    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                dom: 'lBfrtip',
                buttons: ['copyHtml5', 'csvHtml5'],
                order: [[ 1, "asc"]],
                columnDefs: [{ targets: 0, orderable: false}],
                pageLength: 50,
            });
            
        } );
       
    </script>
}