<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CCIA</title>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="//ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/themes/cupertino/jquery-ui.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="client" asp-controller="Home" asp-action="Index">CCIA Web App - Members</a>
            </div>
        </nav>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbars">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse navbars" id="navbar2">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" asp-area="client" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Field Applications</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="Index">Application Home</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="1">Grow Certified Seed</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="2">Grow Certified Potatoes</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="3">Heritage Grain QA</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="4">Pre-Variety Germplasm</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="5">Rice QA</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="6">Turfgrass</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="10">Hemp</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="GrowerLookup" asp-route-appTypeId="11">LacTracker</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="FIRSummary">FIR Summary</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Application" asp-action="Renewals">Application Renewals</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" asp-area="client" asp-controller="Seeds" asp-action="Index" aria-haspopup="true" aria-expanded="false">Certify Seed Lots</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="client" asp-controller="Seeds" asp-action="Index">Seeds Home</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Seeds" asp-action="SelectOrigin">New Certified Seed Lot</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Seeds" asp-action="CreateQALot">New QA/PVG Lot</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" asp-area="client" asp-controller="Tag" asp-action="Index" aria-haspopup="true" aria-expanded="false">Tags</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="client" asp-controller="Tag" asp-action="Index">Tags Home</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Tag" asp-action="Initiate">Request New Tag</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Tag" asp-action="InitiateBulk">Bulk Tag Request</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Tag" asp-action="SelectOrigin">OECD-Gray Tag/Not Finally Certified</a>
                        </div>
                    </li>
                    <a class="nav-link" asp-area="client" asp-controller="OECD" asp-action="Index">OECD</a>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" asp-area="client" asp-controller="Blend" asp-action="Index" aria-haspopup="true" aria-expanded="false">Blends</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="client" asp-controller="Blend" asp-action="Index">Blends Home</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Blend" asp-action="Index">New Lot Blend</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Blend" asp-action="Index">New Varietal Blend</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="Blend" asp-action="Index">New InDirt Blend</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" asp-area="client" asp-controller="BulkSalesCertificates" asp-action="Index" aria-haspopup="true" aria-expanded="false">Bulk Sales/Transfers</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="client" asp-controller="BulkSalesCertificates" asp-action="Create">New Bulks Sales Certificate</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="BulkSalesCertificates" asp-action="Index">Completed Bulk Sales Certificates</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="SeedTransfers" asp-action="Create">New Seed Transfer Certificate</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="SeedTransfers" asp-action="Index">Completed Seed Transfer Certificate</a>
                            <a class="dropdown-item" asp-area="client" asp-controller="MyCustomers" asp-action="Index">My Customers</a>
                        </div>
                    </li>
                    <a class="nav-link" asp-area="client" asp-controller="TurfgrassCertificate" asp-action="Index">Turfgrass Harvest Certificates</a>
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Logout</a>
                </ul>
            </div>
        </nav>

    </header>
    <div class="container-fluid body-content">
        <partial name="_CookieConsentPartial" />
        @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @TempData["ErrorMessage"]
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
        {
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @TempData["Message"]
            </div>
        }        
        @if (!string.IsNullOrWhiteSpace(TempData.Peek("EmulationMessage") as string))
        {
            <div class="alert alert-info">
               Emulation<br/>
                @Html.Raw(TempData.Peek("EmulationMessage"))
            </div>
        }
        <div>
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <span class="text-muted">&copy; 2019 - CCIA </span>
        </div>
    </footer>

    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.8.2/css/all.css" >
    <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"></script>       
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $('.dropdown-toggle').dropdown()
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
