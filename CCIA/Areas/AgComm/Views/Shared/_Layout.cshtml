<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CCIA</title>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="//ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/themes/cupertino/jquery-ui.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="client" asp-controller="Home" asp-action="Index">CCIA Web App - Ag Commissioners</a>
            </div>
        </nav>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbars">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse navbars" id="navbar2">
                <ul class="navbar-nav">
                    <a class="nav-link" asp-controller="Applications" asp-action="Index" asp-area="AgComm">Field Inspection</a>
                    <a class="nav-link" asp-controller="Seeds" asp-action="Index" asp-area="AgComm">Seed Inspection</a>
                    <a class="nav-link" asp-controller="BulkSales" asp-action="Index" asp-area="AgComm">Bulk Sales Inspection</a>
                    <a class="nav-link" asp-controller="SeedTransfers" asp-action="Index" asp-area="AgComm">Seed Transfer Certificates</a>
                    <a class="nav-link" asp-controller="Account" asp-action="Logout" asp-area="">Logout</a>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid body-content">
        <partial name="_CookieConsentPartial" />
        @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @TempData["ErrorMessage"]
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
        {
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @TempData["Message"]
            </div>
        }        
        @if (!string.IsNullOrWhiteSpace(TempData.Peek("EmulationMessage") as string))
        {
            <div class="alert alert-info">
               Emulation<br/>
                @Html.Raw(TempData.Peek("EmulationMessage"))
            </div>
        }
        <div>
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <span class="text-muted">&copy; 2019 - CCIA </span>
        </div>
    </footer>

    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.8.2/css/all.css" >
    <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"></script>       
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $('.dropdown-toggle').dropdown()
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
