@model List<CCIA.Models.ProcessTag>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="//cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css" rel="stylesheet">


    <table id="table" class="table datatable">
        <thead> 
            <th>&nbsp;</th>            
            <th>TID</th>
            <th>ID</th>
            <th>Type</th>
            <th>Date</th>
            <th>Org</th>
            <th>Crop</th>
            <th>Variety</th>
            <th>SID Class</th>
            <th>Lot#</th>
            <th>Tag Class</th>
            <th>Lot weight</th>
            <th>Tag Type</th>  
            <th>File Count</th>         
            <th>Series Rows</th>
            <th>Series Counts</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td><a class="btn btn-info" asp-action="Details" asp-area="admin" asp-controller="Tags" asp-route-id="@item.Id">Details</a></td>
                <td>@item.Id</td>
                <td>@item.LinkId</td>
                <td>@item.IDType</td>
                <td data-sort="@item.DateRequested.ToFileTimeUtc()">@item.DateRequested.ToShortDateString()</td>
                <td>@item.OrgId @item.OrgName</td>
                <td>@item.Crop</td>
                <td>@item.Variety</td>
                <td>@item.SeedClass</td>
                <td>@item.LotNumber</td>
                <td>@item.TagClass</td>
                <td>
                    @if(item.Pounds.HasValue)
                    {
                       @Math.Round(item.Pounds.Value,1) 
                    }
                </td>
                <td>@item.TagType</td>
                <td>@item.FileCount</td>
                <td>@item.SeriesRows</td>
                <td>@item.SeriesCount</td>
            </tr>
            }
        </tbody>
    </table>