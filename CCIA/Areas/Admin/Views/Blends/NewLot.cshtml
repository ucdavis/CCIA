@model CCIA.Models.LotBlends

<div class="container col-sm-12">  
    <form asp-action="NewLot"> 
    <div class="row">
        <div class="col-sm-12">
            <h2>Add Blend Components to Blend @Model.BlendId</h2> 
        </div>            
    </div>
     <div class="row">
         <div class="col-sm-12">
            <div asp-validation-summary="All" class="text-danger"></div>            
        </div>  
    </div>  
    <div class="col-sm-6">
        @Html.HiddenFor(x => x.BlendId)       
        <div class="form-group row">
            <label asp-for="Sid" class="col-sm-3 col-form-label"></label>
            <input asp-for="Sid" class="col-sm-3 form-control">                
            <span class="field-validation-valid text-danger" data-valmsg-for="Sid" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Weight" class="col-sm-3 col-form-label"></label>
            <input asp-for="Weight" class="col-sm-3 form-control">                
            <span class="field-validation-valid text-danger" data-valmsg-for="Weight" data-valmsg-replace="true"></span>
        </div>
    </div>
     <div>
            <input type="submit" value="Add Component" class="btn btn-primary"> | <a asp-action="Details" asp-route-id="@Model.BlendId" class="btn btn-dark">Cancel Add</a>
    </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}
