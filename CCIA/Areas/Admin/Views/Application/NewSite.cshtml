@model CCIA.Models.ApplicationViewModels.NativeSeedSiteEditModel


<h2>Add New G0 Collection Site for AppId @Model.Site.AppId</h2>

<form asp-action="NewSite">
    <input type="hidden" asp-for="Site.AppId">
    <div class="container">
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="form-group row required">
            <label asp-for="Site.SiteName" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="Site.SiteName">
            <span class="field-validation-valid text-danger" data-valmsg-for="Site.SiteName" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row required">
            <label asp-for="Site.CollectionAreaSize" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="Site.CollectionAreaSize">
            <span class="field-validation-valid text-danger" data-valmsg-for="Site.CollectionAreaSize" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row required">
            <label asp-for="Site.FieldElevation" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="Site.FieldElevation">
            <span class="field-validation-valid text-danger" data-valmsg-for="Site.FieldElevation" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row required">
            <label asp-for="Site.Lat" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="Site.Lat">
            <span class="field-validation-valid text-danger" data-valmsg-for="Site.Lat" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row required">
            <label asp-for="Site.Long" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="Site.Long">
            <span class="field-validation-valid text-danger" data-valmsg-for="Site.Long" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row required">
            <label asp-for="Site.SiteCounty" class="col-sm-3 col-form-label"></label>
            <select asp-for="Site.SiteCounty" class="form-control col-sm-3" asp-items="@(new SelectList(Model.Counties,"CountyId","Name"))" data-val="true" data-val-required="Please select Farm County"></select>

        </div>
        <div class="form-group row required">
            <label asp-for="Site.HarvestDate" class="col-form-label col-sm-3">Est. Harvest Date</label>
            <div class="input-group col-sm-9">
                <input type="text" asp-for="Site.HarvestDate" class="form-control datepicker" placeholder="MM/DD/YYYY">
                <div class="input-group-append" id="calendar-btn" onclick="$('.datepicker').focus();">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
            <span class="field-validation-valid text-danger" data-valmsg-for="Site.HarvestDate" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Site.Comments">Site Specific Information/Comments</label>
            <textarea rows="5" class="form-control" asp-for="Site.Comments" placeholder="Site Information/Comments"></textarea>
        </div>
        <div class="col-lg-12">
            <input type="submit" value="Create Site" class="btn btn-primary"></input>
            <a class="btn btn-dark" asp-action="Details" asp-controller="Application" asp-route-id="@Model.Site.AppId">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.js"></script>
        <script>
            $(".datepicker").datepicker({
                format: 'LT',
                autoclose: "true"
            });
        </script>
    }
}