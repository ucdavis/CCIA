@model CCIA.Models.PotatoHealthCertificateHistory

<h2>Edit Field History for AppId @Model.AppId & Year @Model.ProductionYear</h2> 

<form asp-action="EditPotatoHealthCertificateHistory">
    @Html.HiddenFor(x => x.Id)
    <div class="container">
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div> 
        <div class="form-group row">
            <label asp-for="Greenhouse" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="Greenhouse">
            <span class="field-validation-valid text-danger" data-valmsg-for="Greenhouse" data-valmsg-replace="true"></span>
        </div>
         <div class="form-group row">
            <label asp-for="Field" class="col-sm-3 col-form-label"></label>            
            <input type="text" class="col-sm-9 form-control" asp-for="Field">
            <span class="field-validation-valid text-danger" data-valmsg-for="Field" data-valmsg-replace="true"></span>
        </div> 
        <div class="form-group row">
            <label asp-for="CertNumber" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="CertNumber">
            <span class="field-validation-valid text-danger" data-valmsg-for="CertNumber" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CertifyingState" class="col-sm-3 col-form-label"></label>
            <input type="text" class="col-sm-9 form-control" asp-for="CertifyingState">
            <span class="field-validation-valid text-danger" data-valmsg-for="CertifyingState" data-valmsg-replace="true"></span>
        </div>       
        <div class="col-lg-12">            
            <input type="submit" value="Update" class="btn btn-primary"></input> 
            <a class="btn btn-dark" asp-action="PotatoHealthCertificateDetails" asp-route-id="@Model.AppId">Cancel</a>                     
        </div> 
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}