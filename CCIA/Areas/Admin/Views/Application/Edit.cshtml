@model CCIA.Models.Applications
@{
    bool showPurchasedFrom = false;
    bool showPounds = false;
    bool showPlantsPerAcre = false;
    bool showTHC = false;
}

<h2>Application Details</h2> 
<form asp-action="Edit">
    @Html.HiddenFor(x => x.Id)
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="submit"></input>            
        </div>
        <div class="col-lg-6">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Id)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FullCert" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.FullCert)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Status" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Status)
                    </div>
                </div> 
                <div class="form-group row">
                    <label asp-for="Received" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Received)
                    </div>
                </div> 
                <div class="form-group row required">
                    <label asp-for="DatePlanted" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 input-group">
                        <input type="text" asp-for="DatePlanted" class="datepicker form-control"></input>
                        <div class="input-group-append" onclick="$('.datepicker').focus();">             
                            <i class="fa fa-calendar input-group-text"></i>
                        </div>                        
                    </div>
                    <span class="field-validation-valid text-danger" data-valmsg-for="DatePlanted" data-valmsg-replace="true"></span>
                </div>                                  
                <div class="form-group row">
                    <label asp-for="WarningFlag" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.WarningFlag)
                        @Html.DisplayFor(x => x.ApplicantNotes)
                    </div>
                </div> 
                <div class="form-group row">
                    <label asp-for="Renewal" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Renewal)
                    </div>
                </div>                  
                <div class="form-group row">
                    <label asp-for="ApplicantOrganization.NameAndId" class="col-sm-3 col-form-label">Applicant</label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.ApplicantOrganization.NameAndId)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Crop.Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Crop.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ClassProduced.ClassProducedTrans" class="col-sm-3 col-form-label">Class</label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.ClassProduced.ClassProducedTrans)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MapVe" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.CheckBox("MapsVe", Model.MapVe ?? false, new {@disabled = true})
                    </div>
                </div>
                 <div class="form-group row">
                    <label asp-for="FieldName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.FieldName)
                    </div>
                </div> 
                <div class="form-group row">
                    <label asp-for="County.CountyName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.County.CountyName)
                    </div>
                </div>   
        </div>
        <div class="col-lg-6">
                <div class="form-group row">
                    <label asp-for="AppType" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.AppType)
                    </div>
                </div>
                <div class="form-group row required">
                    <label class="col-sm-3 col-form-label" asp-for="CertYear"></label>
                    <input asp-for="CertYear" class="col-sm-3 col-form-label"></input>
                    <span class="field-validation-valid text-danger" data-valmsg-for="CertYear" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="AppType" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.AppTypeTrans.AppTypeTrans)
                    </div>
                </div>   
                <div class="form-group row">
                    <label asp-for="Postmark" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Postmark)
                    </div>
                </div> 
                <div class="form-group row">
                    <label asp-for="Deadline" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Deadline) 
                    </div>
                </div>                   
                <div class="form-group row">
                    <label asp-for="AppLate" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.AppLate) Override? @Html.DisplayFor(x => x.OverrideLateFee)
                    </div>
                </div> 
                <div class="form-group row">
                    <label asp-for="OriginalCertYear" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.OriginalCertYear) Prev App: @Html.DisplayFor(x => x.PaperAppNum)
                    </div>
                </div>                      
                <div class="form-group row">
                    <label asp-for="GrowerOrganization.NameAndId" class="col-sm-3 col-form-label">Grower</label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.GrowerOrganization.NameAndId)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EnteredVariety" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.EnteredVariety)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Variety.Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.Variety.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="AcresApplied" class="col-sm-3 col-form-label">Acres</label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.AcresApplied)
                    </div>
                </div>
                 <div class="form-group row">
                    <label asp-for="PackageComplete" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 form-control-plaintext">
                        @Html.DisplayFor(x => x.PackageComplete)
                    </div>
                </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ApplicantComments" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.DisplayFor(x => x.ApplicantComments)
        </div>
    </div>
        <div class="form-group row">
        <label asp-for="Comments" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.DisplayFor(x => x.Comments)
        </div>
    </div>
</div>
<div class="container">
    <div class="col-lg-1 row">
        <label class="col-form-label">Certificates/Tags</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.Certificates)
                {
                    <tr>
                        <td>
                            Filedownload -
                            @row.Link
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
     <div class="row">
        <hr />
    </div>
    <div class="row">
        <label class="col-form-label">Planting Stock Info</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Cert#</th>
                    <th>Variety</th>
                    @if(Model.PlantingStocks.First().PoundsPlanted != null || Model.PlantingStocks.Last().PoundsPlanted != null)
                    {
                        showPounds = true;
                        <th>Pounds Planted</th>
                    } 
                    @if(Model.PlantingStocks.First().PlantsPerAcre != null || Model.PlantingStocks.Last().PlantsPerAcre != null)
                    { 
                        showPlantsPerAcre = true;                       
                        <th>Plants/Acre</th>
                    }                 
                    <th>Class</th>
                    <th>Tag Issued</th>
                    <th>Grown</th>
                    @if(Model.PlantingStocks.First().SeedPurchasedFrom != null || Model.PlantingStocks.Last().SeedPurchasedFrom != null)
                    {
                        showPurchasedFrom = true;
                        <th>Purchased From</th>
                    } 
                    @if(Model.AppType == "PO")
                    {
                        <th>Winter test?</th>
                        <th>PVX test?</th>
                    }
                    @if(Model.PlantingStocks.First().ThcPercent != null || Model.PlantingStocks.Last().ThcPercent != null)
                    {
                        showTHC = true;
                        <th>THC%</th>
                    } 
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.PlantingStocks)
                {
                    <tr>
                        <td>
                            @row.PsCertNum
                        </td>
                        <td>@row.PsEnteredVariety</td>
                        @if(showPounds)
                        {
                            <td>@row.PoundsPlanted</td>
                        }
                        @if(showPlantsPerAcre)
                        {
                            <td>@row.PlantsPerAcre</td>
                        }                        
                        <td>@row.PsClassNavigation.ClassProducedTrans</td>
                        @if(@row.TaggedStateProvince == null)
                        {
                            <td>@row.StateCountryTagIssued</td>
                        } else if(@row.GrownStateProvince.StateProvinceName != null)
                        {
                            <td>@row.TaggedStateProvince.StateProvinceName</td>
                        }  else {
                            <td>&nbsp;</td>
                        }                      
                        <td>@row.GrownStateProvince.StateProvinceName</td>
                        <td>@row.SeedPurchasedFrom</td>
                        @if(Model.AppType == "PO")
                        {
                            <td>@Html.DisplayFor(x => row.PvxTest.Value)</td>
                            <td>@Html.DisplayFor(x => row.PvxTest.Value)</td>
                        }
                        @if(showTHC)
                        {
                            <td>@row.ThcPercent</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <hr />
    </div>  
    <div class="row">
        <label class="col-form-label">Field History</label>
        <table class="table">
            <thead>
            <tr>
                <th>Year</th>
                <th>Crop</th>
                <th>Variety</th>
                <th>Application #</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in Model.FieldHistories)
            {
                <tr>
                    <td>@row.Year</td>
                    <td>@row.FHCrops.Name</td>
                    <td>@row.Variety</td>
                    <td>@row.AppNumber</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="row">
        <h3>Changes made to this application:</h3>
        <table class="table">
            <thead>
            <tr>
                <th>column</th>
                <th>Old Value</th>
                <th>New Value</th>
                <th>Date</th>
                <th>Person</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in Model.Changes)
            {
                <tr>
                    <td>@row.ColumnChange</td>
                    <td>@row.OldValue</td>
                    <td>@row.NewValue</td>
                    <td>@row.DateChanged</td>
                    <td>@row.Employee.Name</td>
                </tr>
            }
            </tbody>
        </table>
    </div>    
</div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.js"></script>
    
     <script type="text/javascript">
        $(document).ready(function () {
        $('.datepicker').datepicker();
    });
    </script>
}
