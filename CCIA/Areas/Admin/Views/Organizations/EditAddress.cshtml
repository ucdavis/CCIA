@model CCIA.Models.AdminAddressEditCreateViewModel

<form asp-action="EditAddress">
@Html.HiddenFor(x => x.address.Id)
<div class="container col-sm-12">    
    <div class="row">
        <div class="col-sm-12">
            <h2>Edit Address for @Model.OrgName</h2> 
        </div>            
    </div>
    <div class="row">
         <div class="col-sm-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>  
    </div>  
    <div class="col-sm-6">
        <div class="form-group row">
            <label asp-for="address.Address1" class="col-sm-3 col-form-label"></label>
            <input asp-for="address.Address1" class="col-sm-3 form-control">
            <span class="field-validation-valid text-danger" data-valmsg-for="address.Address1" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row">
            <label asp-for="address.Address2" class="col-sm-3 col-form-label"></label>
            <input asp-for="address.Address2" class="col-sm-3 form-control">
            <span class="field-validation-valid text-danger" data-valmsg-for="address.Address2" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group row">
            <label asp-for="address.Address3" class="col-sm-3 col-form-label"></label>
            <input asp-for="address.Address3" class="col-sm-3 form-control">
            <span class="field-validation-valid text-danger" data-valmsg-for="address.Address3" data-valmsg-replace="true"></span>
        </div> 
        <div class="form-group row">
            <label asp-for="address.City" class="col-sm-3 col-form-label"></label>
            <input asp-for="address.City" class="col-sm-3 form-control">
            <span class="field-validation-valid text-danger" data-valmsg-for="address.City" data-valmsg-replace="true"></span>
        </div>  
        <div class="form-group row">
            <label asp-for="address.CountyId" class="col-sm-3 col-form-label">County</label>
            <select required asp-for="address.CountyId" class="col-sm-5 form-control" asp-items="@(new SelectList(Model.counties, "CountyId", "Name"))"></select>
        </div>
       <div class="form-group row">
            <label asp-for="address.StateProvinceId" class="col-sm-3 col-form-label">County</label>
            <select required asp-for="address.StateProvinceId" class="col-sm-5 form-control" asp-items="@(new SelectList(Model.states, "StateProvinceId", "Name"))"></select>
        </div>   
        <div class="form-group row">
            <label asp-for="address.PostalCode" class="col-sm-3 col-form-label"></label>
            <input asp-for="address.PostalCode" class="col-sm-3 form-control">
            <span class="field-validation-valid text-danger" data-valmsg-for="address.PostalCode" data-valmsg-replace="true"></span>
        </div>
        <div class="row">
         <div class="col-sm-12">             
            <input type="submit" value="Update" class="btn btn-primary"></input>   
            <a class="btn btn-dark" asp-action="Details" asp-controller="Organizations" asp-area="Admin" asp-route-id="@Model.OrgId">Cancel</a>
        </div>
    </div>
</div>
</form>

@section Scripts {
     @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
    
}