@model CCIA.Models.Organizations

<div class="container col-sm-12">    
    <div class="row">
        <div class="col-sm-12">
            <h2>Organization Details</h2> 
        </div>            
    </div>
     <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="Edit" asp-controller="Organizations" asp-area="Admin" asp-route-id="@Model.Id">Edit</a> <br><br>
        </div>            
    </div>     
    <div class="row">
        <div class="col-md-6 col-xl-4"> @* First column *@
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Id)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Email)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Member" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Member)
                </div>
            </div>    
            <div class="form-group row">
                <label asp-for="MemberType" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.MemberType)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="GermLab" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.GermLab)
                </div>
            </div>                            
        </div>
        <div class="col-md-6 col-xl-4"> @* Second column *@  
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Name)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Phone)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="Active" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Active)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RepresentativeContactId" class="col-sm-3 col-form-label">Member Representative</label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.RepresentativeContact.Name)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DiagnosticLab" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.DiagnosticLab)
                </div>
            </div>                                                      
        </div>
        <div class="col-md-6 col-xl-4"> @* Third Col *@ 
            <div class="form-group row">
                <label asp-for="Fax" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Fax)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="Website" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.Website)
                </div>
            </div> 
                      
            <div class="form-group row">
                <label asp-for="MemberYear" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.MemberYear)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="MemberSince" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.MemberSince)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="AgCommissioner" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.AgCommissioner)
                </div>
            </div>                     
        </div>
    </div>
    <div class="col-sm-6">
        <h3>Conditioner Status</h3>
        <a class="btn btn-primary" asp-action="NewStatus" asp-area="Admin" asp-controller="Organizations" asp-route-id="@Model.Id">Add new Status</a>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>Year</th>
                    <th>Status</th>
                    <th>Pretag?</th>
                    <th>Print Series?</th>
                    <th>CCIA Print Series?</th>
                    <th>Date Pretag Approved</th>
                    <th>Update Date</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var status in Model.ConditionerStatus.OrderBy(x => x.Year))
                {
                    <tr>
                        <td><a asp-action="EditStatus" asp-area="Admin" asp-controller="Organizations" asp-route-id="@status.Id" class="btn btn-primary">Edit</a></td>
                        <td>@status.Year</td>
                        <td>@status.Status</td>
                        <td>@Html.CheckBoxFor(x => status.AllowPretag)</td>
                        <td>@Html.CheckBoxFor(x => status.PrintSeries)</td>
                        <td>@Html.CheckBoxFor(x => status.RequestCciaPrintSeries)</td>
                        <td>@Html.DisplayFor(x => @status.DatePretagApproved)</td>
                        <td>@status.DateUpdated</td>
                    </tr>                    
                }  
            </tbody>
        </table>              
    </div> 
    <div class="col-sm-6">
        <hr>
        <h3>Address</h3> 
        <a asp-action="EditAddress" asp-area="Admin" asp-controller="Organizations" asp-route-id="@Model.AddressId" class="btn btn-primary">Edit Address</a>
        <div class="form-group row">
            <label asp-for="District" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.District)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address.Address1" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Address.Address1)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address.Address2" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Address.Address2)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address.Address3" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Address.Address3)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address.City" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Address.City)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address.County.Name" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Address.County.Name)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address.StateProvince.Name" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Address.StateProvince.Name)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address.PostalCode" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Address.PostalCode)
            </div>
        </div>
        <div class="form-group-row">
            <hr>
        </div>
        <div class="form-group row">
            <label asp-for="Notes" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.Notes)
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <hr>
        <h3>Employees</h3>
        <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td></td>
                    <td>@employee.Title</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    
</div>
