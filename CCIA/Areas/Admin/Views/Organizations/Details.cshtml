@model CCIA.Models.AdminOrgDetailsViewModel

<div class="container col-sm-12">    
    <div class="row">
        <div class="col-sm-12">
            <h2>Organization Details</h2> 
        </div>            
    </div>
     <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="Edit" asp-controller="Organizations" asp-area="Admin" asp-route-id="@Model.org.Id">Edit</a> <br><br>
        </div>            
    </div>     
    <div class="row">
        <div class="col-md-6 col-xl-4"> @* First column *@
            <div class="form-group row">
                <label asp-for="org.Id" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Id)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="org.Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Email)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="org.Member" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Member)
                </div>
            </div>    
            <div class="form-group row">
                <label asp-for="org.MemberType" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.MemberType)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="org.GermLab" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.GermLab)
                </div>
            </div>                            
        </div>
        <div class="col-md-6 col-xl-4"> @* Second column *@  
            <div class="form-group row">
                <label asp-for="org.Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Name)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="org.Phone" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Phone)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="org.Active" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Active)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="org.RepresentativeContactId" class="col-sm-3 col-form-label">Member Representative</label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.RepresentativeContact.Name)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="org.DiagnosticLab" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.DiagnosticLab)
                </div>
            </div>                                                      
        </div>
        <div class="col-md-6 col-xl-4"> @* Third Col *@ 
            <div class="form-group row">
                <label asp-for="org.Fax" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Fax)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="org.Website" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.Website)
                </div>
            </div> 
                      
            <div class="form-group row">
                <label asp-for="org.MemberYear" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.MemberYear)
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="org.MemberSince" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.MemberSince)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="org.AgCommissioner" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.DisplayFor(x => x.org.AgCommissioner)
                </div>
            </div>                     
        </div>
    </div>
    <div class="col-sm-6">
        <h3>Conditioner Status</h3>
        <a class="btn btn-primary" asp-action="NewStatus" asp-area="Admin" asp-controller="Organizations" asp-route-id="@Model.org.Id">Add new Status</a>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>Year</th>
                    <th>Status</th>
                    <th>Pretag?</th>
                    <th>Print Series?</th>
                    <th>CCIA Print Series?</th>
                    <th>Date Pretag Approved</th>
                    <th>Update Date</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var status in Model.org.ConditionerStatus.OrderBy(x => x.Year))
                {
                    <tr>
                        <td><a asp-action="EditStatus" asp-area="Admin" asp-controller="Organizations" asp-route-id="@status.Id" class="btn btn-primary">Edit</a></td>
                        <td>@status.Year</td>
                        <td>@status.Status</td>
                        <td>@Html.CheckBoxFor(x => status.AllowPretag)</td>
                        <td>@Html.CheckBoxFor(x => status.PrintSeries)</td>
                        <td>@Html.CheckBoxFor(x => status.RequestCciaPrintSeries)</td>
                        <td>@Html.DisplayFor(x => @status.DatePretagApproved)</td>
                        <td>@status.DateUpdated</td>
                    </tr>                    
                }  
            </tbody>
        </table>              
    </div> 
    <div class="row">
        <div class="col-sm-12">
          <hr>
            <h3>Mapping permissions</h3>  
        </div>       
        <div class="col-md-6 col-xl-4"> @* Third Col *@ 
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Map Name</th>
                        <th>Allow?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var permission in Model.org.MapPermissions)
                    {
                        <tr>
                            <td>Toggle</td>
                            <td>@permission.Map</td>
                            <td>@Html.CheckBoxFor(a => permission.Allow)</td>
                        </tr>                    
                    }
                </tbody>
            </table>
            <div class="row">
                <form asp-action="AddMapPermission">
                    @Html.HiddenFor(x => x.org.Id)
                    <select required name="MapName" id="MapName" class="form-control" asp-items="@(new SelectList(Model.maps, "Id", "Name"))"></select>
                    <input type="submit" value="Add map permission" class="btn btn-primary">
                </form>
            </div>
        </div>
        
        
    </div>
    <div class="col-sm-6">
        <hr>
        <h3>Address</h3> 
        @if(Model.org.Address == null){
            <a asp-action="AddAddress" asp-area="Admin" asp-controller="Organizations" asp-route-id="@Model.org.Id" class="btn btn-primary">Add Address</a>
        } 
        else
        {
            <a asp-action="EditAddress" asp-area="Admin" asp-controller="Organizations" asp-route-id="@Model.org.AddressId" class="btn btn-primary">Edit Address</a>
        
        
        <div class="form-group row">
            <label asp-for="org.District" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.District)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.Address1" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.Address1)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.Address2" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.Address2)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.Address3" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.Address3)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.City" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.City)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.County.Name" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.County.Name)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.StateProvince.Name" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.StateProvince.Name)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.Countries.Name" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.Countries.Name)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="org.Address.PostalCode" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Address.PostalCode)
            </div>
        </div>
        }
        <div class="form-group-row">
            <hr>
        </div>
        <div class="form-group row">
            <label asp-for="org.Notes" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext">
                @Html.DisplayFor(x => x.org.Notes)
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <hr>
        <h3>Employees</h3>
        <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.org.Employees)
            {
                <tr>
                    <td></td>
                    <td>@employee.Title</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    
</div>
