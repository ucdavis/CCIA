@model CCIA.Models.AdminApplicationReportViewModel



<h3>Application Acreage Report</h3>
<form asp-action="Search" method="POST">
<div class="container col-sm-2">
    <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#SearchCollapse" aria-expanded="false" aria-controls="SearchCollapse">
    Hide Search
  </button>
</div>
<div class="container col-sm-10 collapse show" id="SearchCollapse">
    <div>&nbsp;</div>
    <div class="row">
        <div class="col-md-6 col-xl-4">@* First column*@
            <div class="form-group row">
                <label asp-for="cropsReport" class="col-sm-3 col-form-label">Crops</label>
                <select asp-for="cropsReport" size="8" class="col-sm-3 form-control" asp-items="@(new SelectList(Model.crops, "CropId","Name"))"></select>   
                 <div class="col-sm-1">&dagger;</div>             
            </div>                         
        </div>
        <div class="col-md-6 col-xl-4">@* 2nd column *@                      
            <div class="form-group row">
                 <label asp-for="appTypeReport" class="col-sm-3 col-form-label">App Type</label>
                <select asp-for="appTypeReport" class="col-sm-3 form-control" asp-items="@(new SelectList(Model.appTypes, "AppTypeId", "AppTypeTrans"))"></select>
            </div> 
            <div class="form-group row">
                <label asp-for="varietyIdReport" class="col-sm-3 col-form-label">Variety ID</label>
                <input asp-for="varietyIdReport" class="form-control col-sm-3">
            </div>    
            <div class="form-group row">
                 <label asp-for="certYearReport" class="col-sm-3 col-form-label">Cert Year</label>
                <select asp-for="certYearReport" class="col-sm-4 form-control" asp-items="@(new SelectList(Model.certYears))"></select>
            </div> 
            <div class="form-group row">
                 <label asp-for="reportType" class="col-sm-3 col-form-label">Report</label>
                <select asp-for="reportType" class="col-sm-4 form-control" asp-items="@(new SelectList(Model.reportTypes))"></select>
            </div>          
        </div>
        <div class="col-md-6 col-xl-4">@* 3rd column *@ 
            <div class="form-group row">
                <label asp-for="countiesReport" class="col-sm-3 col-form-label">Counties</label>
                <select asp-for="countiesReport" size="8" class="col-sm-3 form-control" asp-items="@(new SelectList(Model.counties, "CountyId","Name"))"></select>
                 <div class="col-sm-1">&dagger;</div>                
            </div>   
        </div>
    </div>
    <div>
        <input type="submit" value="Search" class="btn btn-primary"></input> 
    </div>
</div>
<hr>
</form>
