@model CCIA.Models.VarietyBlendComponents

<h2>Edit Blend Component</h2>
<form asp-action="EditComponent">
    <input type="hidden" asp-for="Id">
    <div class="container col-sm-6">
        <div class="form-group row">
            <label asp-for="ComponentVarietyId" class="col-sm-3 col-form-label">Variety ID</label>
            <div class="col-sm-9">
                <input type="text" asp-for="ComponentVarietyId" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ComponentVariety.Name" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input type="text" asp-for="ComponentVariety.Name" readonly class="form-control-plaintext">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ComponentPercent" class="col-sm-3 col-form-label">Percent</label>
            <div class="col-sm-9">
                <input type="text" asp-for="ComponentPercent" class="form-control">
            </div>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Update">
        </div>
    </div>
</form>